		<label for="editComment">Comment:</label>
		<textarea class="form-control" rows="5" id="editComment" name="comment[text]" required><%= comment.text %></textarea>
	</div>
	<hr id="hrEditComment">
	<div class="form-group">
		<input type="submit" class="btn btn-default btn-lg" value="Submit">
	</div>
</form>




